@model Utente

@{

    Layout = "_mioLayout";

}

<div class="container">

            <div class="row justify-content-center mt-5 mb-5" style=border-radius=10>

                <div class ="col-3">

                        <img src="https://toolset.mrw.it/temp/logo_e6d92b94e0acce6060f643b9a3b6a6a5.png" alt="enter" />

                </div>

            </div>

            <div class="row justify-content-center mb-5 mt-5">

                <div class ="col-4 justify-content-center">

                    <form action="@Url.Action("Registrazione" , "Utente")" method="post")>
                        @Html.AntiForgeryToken()
                      <!-- Email input -->
                      <div class="form-outline mb-4">
                        <p>Nome Utente</p>
                        <input asp-for="nomeUtente" class="d-block w-100" />
                        <span asp-validation-for="nomeUtente" class="text-danger"></span>
                      </div>

                      <!-- Password input -->
                      <div class="form-outline mb-4">
                        <p>Password</p>
                        <input asp-for="password" class="d-block w-100" />
                        <span asp-validation-for="password" class="text-danger"></span>
                      </div>

                      <!-- 2 column grid layout for inline styling -->
                      <div class="row mb-4">
                        <div class="col d-flex justify-content-center">
                          <!-- Checkbox -->
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                            <label class="form-check-label" for="form2Example31"> Remember me </label>
                          </div>
                        </div>

                        <div class="col color-danger">
                          <!-- Simple link -->
                          <a href=="#!" style="color:red">Forgot password?</a>
                        </div>
                      </div>

                      <!-- Submit button -->
                      <button type="submit" class="btn btn-danger btn-block mb-4">Registrazione</button>

                    </form>

                </div>


                </div>

        </div>
