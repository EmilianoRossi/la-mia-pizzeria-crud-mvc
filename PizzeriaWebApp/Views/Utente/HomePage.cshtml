@model Utente
@{

    Layout = "_layoutNoLog";

}

<body>

    <main>

        <div class="container">

            <div class="row justify-content-center mt-5 mb-5" style=border-radius=10>

                <div class ="col-6">

                        <img src="https://toolset.mrw.it/temp/logo_7c09de55f91421c59a2e1fbe830ec0b3.png" alt="enter" />

                </div>

            </div>

            <div class="row justify-content-center mb-5 mt-5">

                <div class ="col-4 justify-content-center">

                    <form action="@Url.Action("HomePage" , "Utente")" method="post">
                      <!-- Email input -->
                      <div class="form-outline mb-4">
                          <p>Nome Utente</p>
                        <input asp-for="NomeUtente" class="d-block w-100" />
                        
                      </div>

                      <!-- Password input -->
                      <div class="form-outline mb-4">
                          <p>Password</p>
                        <input asp-for="Password" class="d-block w-100" />
                        
                      </div>

                      <!-- 2 column grid layout for inline styling -->
                      <div class="row mb-4">
                        <div class="col d-flex justify-content-center">
                          <!-- Checkbox -->
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                            <label class="form-check-label" for="form2Example31"> Remember me </label>
                          </div>
                        </div>

                        <div class="col color-danger">
                          <!-- Simple link -->
                          <a href =@Url.Action("Registrazione" , "Utente")>
                              Registrati!
                          </a>
                        </div>
                      </div>

                      <!-- Submit button -->
                      <button type="submit" class="btn btn-danger btn-block mb-4">Accedi</button>
                      @if (ViewBag.Message != null)
                      {
                        <script type="text/javascript">
                            window.onload = function () {
                                alert("@ViewBag.Message");
                            };
                        </script>
                      }


    }

                    </form>

                </div>


                </div>


            <div class="row justify-content-center mt-5">

            </div>

        </div>

    </main>

</body>